{% extends 'base.html.twig' %}

{% block title %}Réinitialisation{% endblock %}

{% block body %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container">

        <div class="row">
            <h1 class="text-center my-5">Réinitialisation du mot de passe</h1>
        </div>

        <div class="row w-50 mx-auto">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
        </div>

    </div>

    <div class="my-3 text-center">
        <small>
            Entrez votre adresse e-mail et nous allons vous envoyer un lien pour réinitialiser votre mot de passe.
        </small>
    </div>

    <div class="row w-25 mx-auto">
        <button class="btn btn-outline-danger">Envoyer</button>
    </div>

   {{ form_end(requestForm) }}

{% endblock %}