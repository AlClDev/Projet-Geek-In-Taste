{% extends 'base.html.twig' %}

{% block title %}Réinitialisation{% endblock %}

{% block body %}

    <div class="container">

        <div class="row text-center my-5">
            <h1>Réinitialisation du mot de passe</h1>
        </div>

        <div class="row w-50 my-5 mx-auto">
            {{ form_start(resetForm) }}

            <div id="passField">
            {{ form_row(resetForm.plainPassword) }}
                <p id="bubble">Votre mot de passe doit contenir obligatoirement une minuscule, une majuscule, un chiffre et un caractère spécial et un minimum de 8 caractères</p>
            </div>
            <button class="btn btn-outline-danger w-100">Réinitialiser</button>
            {{ form_end(resetForm) }}
        </div>

    </div>

{% endblock %}