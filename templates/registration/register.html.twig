{# Utilisation du squelette de base.html.twig #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Créer un compte{% endblock %}

{# Contenu de la page #}
{% block body %}

    <div class="container-fluid register-style-text-form">

        {# Titre h1 #}
        <div class="row">
            <h1 class="col-12 text-center my-5 h1-register-style">créer un compte</h1>
        </div>

        {# Formulaire d'inscription #}
        <div class="row">
            <div class="col-12 col-md-4 mx-auto">

                {# Ouverture du formulaire #}
                {{ form_start( registrationForm ) }}

                {# Affichages des erreurs générales du formulaires #}
                {{ form_errors( registrationForm ) }}

                {# Champ pseudonyme #}
                <div id="passField">
                     {{ form_row( registrationForm.pseudonym ) }}
                    <p id="bubble">Votre pseudonyme doit contenir entre 2 et 5 caractères</p>
                </div>

                {# Champ email #}
                <div id="passField">
                {{ form_row( registrationForm.email ) }}
                    <p id="bubble">Entrer votre adresse email dans ce champs</p>
                </div>

                {# Champ mot de passe #}
                <div id="passField">
                    {{ form_row( registrationForm.plainPassword ) }}
                    <p id="bubble">Votre mot de passe doit contenir obligatoirement une minuscule, une majuscule, un chiffre et un caractère spécial et un minimum de 8 caractères</p>
                </div>

                {# Champ date de naissance #}
                <div id="passField">
                {{ form_row( registrationForm.birthDate ) }}
                    <p id="bubble">Choisir un jour un mois et une année</p>
                </div>

                {# Champ image de profile #}
                <div id="passField">
                {{ form_row( registrationForm.pictureProfil ) }}
                    <p id="bubble">Seul les .jpeg et les .png sont valides</p>
                </div>

                {# Champ biographie #}
                {{ form_row( registrationForm.biography ) }}

                {# Affichage du Recaptcha #}
                <div class="mb-3">

                    {# Clé publique du recaptcha #}
                    <div class="g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}"></div>
                </div>

                <div class="cgu-registration-style">
                    {{ form_row( registrationForm.terms ) }}
                    {# Liens vers le CGU #}
                    <div class="link-cgu-register-style">
                        <a href="{{ path('cgu') }}" target="_blank">Conditions Générales d'Utilisation</a>
                    </div>
                </div>

                {# Bouton validation #}
                {{ form_row( registrationForm.save ) }}

                {# Fermeture formulaire #}
                {{ form_end( registrationForm ) }}


            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

